(rule
 (copy ../Version.ml Version.ml))

(ocamllex Lexer)

(ocamllex SimpleLexer0)

(ocamllex splitasl)

(menhir
 (modules Tokens)
 (flags --only-tokens))

(menhir
 (modules Tokens Parser)
 (merge_into Parser)
 (flags --cmly --external-tokens Tokens))

(menhir
 (modules Parser0)
 (flags --unused-tokens --table))

(rule
 (deps
  (:v1 libdir/stdlib.asl)
  (:v0 libdir/stdlib0.asl))
 (target asl_stdlib.ml)
 (action
  (with-stdout-to
   %{target}
   (progn
    (echo "let stdlib = {|")
    (cat %{v1})
    (echo "|}")
    (echo "let stdlib0 = {|")
    (cat %{v0})
    (echo "|}")))))

